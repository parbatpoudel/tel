<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/business_communication"
            android:layout_width="173dp"
            android:layout_height="150dp"
            android:background="@drawable/businesscommunication"/>
        <TextView
            android:id="@+id/t1"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/business_communication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="         English(B.C)"
            android:textSize="15sp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/information_system"
            android:layout_width="173dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/informationsystem"/>
        <TextView
            android:id="@+id/t2"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/information_system"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Information System     "
            android:textSize="15sp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/statistics"
            android:layout_below="@+id/t1"
            android:layout_marginTop="13dp"
            android:layout_width="173dp"
            android:layout_height="150dp"
            android:background="@drawable/statistics"/>
        <TextView
            android:id="@+id/t3"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/statistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="            statistics"
            android:textSize="15sp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/account"
            android:layout_below="@id/t2"
            android:layout_marginTop="13dp"
            android:layout_width="173dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/account"/>
        <TextView
            android:id="@+id/t4"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:text="Account               "
            android:textSize="15sp"
            android:textColor="#000000"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/business_finance"
            android:layout_below="@+id/t3"
            android:layout_marginTop="13dp"
            android:layout_width="173dp"
            android:layout_height="150dp"
            android:background="@drawable/finance"/>
        <TextView
            android:id="@+id/t5"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/business_finance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="            Finance"
            android:textSize="15sp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/formula"
            android:layout_below="@id/t4"
            android:layout_marginTop="13dp"
            android:layout_width="173dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/formula"/>
        <TextView
            android:id="@+id/t6"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/formula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:text="Formula               "
            android:textSize="15sp"
            android:textColor="#000000"
            android:textStyle="bold"/>


    </RelativeLayout>

</ScrollView>